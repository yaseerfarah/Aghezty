<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_cardview"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/order_product_list"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/order_view1"
                android:layout_below="@+id/order_product_list"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:id="@+id/order_id"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/order_view1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#0125488759"
                android:id="@+id/order_an_id"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:layout_below="@+id/order_view1"
                android:layout_toEndOf="@+id/order_id"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_method_field"
                android:id="@+id/order_method"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/order_id"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:id="@+id/order_an_method"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:layout_below="@+id/order_id"
                android:layout_toEndOf="@+id/order_method"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_status"
                android:id="@+id/order_status"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/order_method"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"

                android:id="@+id/order_an_status"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:layout_below="@+id/order_method"
                android:layout_toEndOf="@+id/order_status"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_time"
                android:id="@+id/order_time"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/order_status"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-1-5 11:15Pm"
                android:id="@+id/order_an_time"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:layout_below="@+id/order_status"
                android:layout_toEndOf="@+id/order_time"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/order_view2"
                android:layout_below="@+id/order_time"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_discount"
                android:id="@+id/coupon_discount"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/order_view2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:id="@+id/coupon_discount_price"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/order_view2"
                android:layout_toEndOf="@+id/coupon_discount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".EGP"
                android:id="@+id/coupon_egp"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/order_view2"
                android:layout_toEndOf="@+id/coupon_discount_price"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_amount"
                android:id="@+id/shipping_amount"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/coupon_discount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:id="@+id/shipping_price"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/coupon_discount"
                android:layout_toEndOf="@+id/shipping_amount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".EGP"
                android:id="@+id/shipping_egp"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/coupon_discount"
                android:layout_toEndOf="@+id/shipping_price"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_price"
                android:id="@+id/order_totalprice"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_below="@+id/shipping_amount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00"
                android:id="@+id/order_an_total_price"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/shipping_amount"
                android:layout_toEndOf="@+id/order_totalprice"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".EGP"
                android:id="@+id/order_egp"
                android:textColor="@color/dark_blue"
                android:textSize="15sp"
                android:typeface="serif"
                android:layout_below="@+id/shipping_amount"
                android:layout_toEndOf="@+id/order_antotalprice"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                />





        </RelativeLayout>


    </androidx.cardview.widget.CardView>








</RelativeLayout>