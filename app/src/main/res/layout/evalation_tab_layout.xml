<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/evaluation_layout"
    android:layout_below="@+id/tab"
    android:orientation="horizontal"
    android:weightSum="2"
    android:visibility="gone"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:id="@+id/text"
            android:layout_weight="0"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overall_rating"
                android:text="@string/overall_rating"
                android:textStyle="bold"
                android:textSize="@dimen/product_details_name_size"
                android:textColor="@color/dark_blue"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rate"
                android:text="4.9/5"
                android:textStyle="bold"
                android:textSize="@dimen/product_details_name_size"
                android:textColor="@color/orange"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/ratingBarStyleSmall"
                android:id="@+id/rate_star"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:rating="4.5"
                android:progressTint="@color/orange"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/based_on"
                android:text="@string/based_on"
                android:textSize="@dimen/product_details_dicount_text_size"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"                                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num_rate"
                android:text="36"
                android:textSize="@dimen/product_details_dicount_text_size"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>


        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/text"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:id="@+id/progress"
            android:layout_weight="1"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate5"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate5_text"
                    android:text="5"
                    android:textSize="@dimen/product_details_dicount_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    />


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate5_text"
                    android:layout_centerVertical="true"
                    android:id="@+id/rate5_bar"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/white"
                    android:enabled="false"

                    android:progress="50"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate4"
                android:layout_below="@+id/rate5"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate4_text"
                    android:text="4"
                    android:textSize="@dimen/product_details_dicount_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    />


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate4_text"
                    android:layout_centerVertical="true"
                    android:id="@+id/rate4_bar"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/white"
                    android:enabled="false"
                    android:progress="50"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate3"
                android:layout_below="@+id/rate4"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate3_text"
                    android:text="3"
                    android:textSize="@dimen/product_details_dicount_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    />


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate3_text"
                    android:layout_centerVertical="true"
                    android:id="@+id/rate3_bar"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/white"
                    android:enabled="false"
                    android:progress="50"
                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate2"
                android:layout_below="@+id/rate3"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate2_text"
                    android:text="2"
                    android:textSize="@dimen/product_details_dicount_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    />


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate2_text"
                    android:layout_centerVertical="true"
                    android:id="@+id/rate2_bar"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/white"
                    android:enabled="false"
                    android:progress="50"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate1"
                android:layout_below="@+id/rate2"
                android:layout_marginTop="2dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate1_text"
                    android:text="1"
                    android:textSize="@dimen/product_details_dicount_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    />


                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rate1_text"
                    android:layout_centerVertical="true"
                    android:id="@+id/rate1_bar"
                    android:progressTint="@color/orange"
                    android:thumbTint="@color/white"
                    android:enabled="false"
                    android:progress="50"
                    />

            </RelativeLayout>

        </RelativeLayout>



</LinearLayout>