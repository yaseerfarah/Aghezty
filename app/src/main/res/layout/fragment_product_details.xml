<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ProductDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/home_bar"
            android:background="@android:color/white"

            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_toolbar"
                >

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_logo"
                    android:layout_gravity="center"
                    android:id="@+id/app_logo"
                    />




            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


       <com.gturedi.views.StatefulLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/stateful"
           android:layout_below="@+id/home_bar">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/root"
            >





        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/desc_add_tocart"
            android:layout_marginBottom="2dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >






                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/v_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/product_details_view_pager_height"
                    android:layout_alignParentTop="true"
                    />







                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/v_view_pager"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"/>






                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/v_view_pager"
                    android:layout_marginTop="2dp"
                    android:id="@+id/vline1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/darker_gray"/>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_card"
                    android:layout_below="@+id/vline1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/vtitle"
                            android:text="London Sweetshirt"
                            android:textStyle="bold"
                            android:textSize="@dimen/product_details_name_size"
                            android:textColor="@color/dark_blue"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            />




                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vtitle"
                            android:id="@+id/ex_dis"

                            android:layout_marginTop="8dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/pro_exprice"
                                android:text="159.99"
                                android:textSize="@dimen/product_details_ex_price"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginStart="15dp"
                                android:textStyle="normal"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/pro_exegp"
                                android:text="@string/egp"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/product_details_ex_price"
                                android:textColor="@android:color/darker_gray"
                                android:layout_toEndOf="@+id/pro_exprice"
                                android:layout_marginStart="2dp"
                                android:typeface="serif"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/discount_background"
                                android:id="@+id/pro_discount"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:layout_centerVertical="true"
                                android:textColor="@android:color/white"
                                android:text="15%"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/home_card_dicount_line_size"
                                android:layout_marginTop="15dp"
                                android:id="@+id/pro_linexprice"
                                android:layout_marginStart="15dp"

                                android:layout_alignEnd="@+id/pro_exegp"
                                android:background="@android:color/darker_gray"/>

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ex_dis"
                            android:id="@+id/de_available_q_text"
                            android:text="@string/available_quantity"
                            android:textSize="@dimen/product_details_name_size"
                            android:textColor="@color/dark_blue"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="15dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ex_dis"
                            android:id="@+id/de_available_q"
                            android:text="50"
                            android:layout_toEndOf="@+id/de_available_q_text"
                            android:textSize="@dimen/product_details_name_size"
                            android:textColor="@color/dark_blue"

                            android:layout_marginTop="8dp"
                            android:layout_marginStart="15dp"
                            />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_alignParentEnd="true"
                            android:layout_below="@+id/ex_dis"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/evaluation"
                            android:background="@drawable/evaluation_background"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/star"
                                android:id="@+id/pro_evaluation"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:textColor="@android:color/white"
                                android:text="4.9"
                                />
                            <ImageButton
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:id="@+id/star"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="2dp"
                                android:background="@drawable/ic_star"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_below="@id/de_available_q"
                            android:layout_marginBottom="15dp"
                            >

                            <TextView
                                android:layout_marginStart="15dp"
                                android:id="@+id/pro_price"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:textColor="@android:color/holo_blue_dark"
                                android:textStyle="bold"
                                android:typeface="serif"
                                android:text="149.99"
                                android:textSize="@dimen/product_details_pro_price"
                                />
                            <TextView
                                android:layout_marginStart="5dp"
                                android:id="@+id/pro_egp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/pro_price"
                                android:textColor="@color/dark_blue"
                                android:textStyle="bold"
                                android:typeface="serif"
                                android:text="@string/egp"
                                android:layout_alignBottom="@+id/pro_price"
                                android:textSize="@dimen/product_details_egp"
                                />
                        </RelativeLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/info_card"
                    android:id="@+id/card_q"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="@dimen/round_button"
                            android:layout_height="@dimen/round_button"
                            android:background="@drawable/round_b"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/ic_add_black_24dp"
                            android:id="@+id/increase"
                            android:layout_alignParentStart="true"
                            />

                        <ImageButton
                            android:layout_width="@dimen/round_button"
                            android:layout_height="@dimen/round_button"
                            android:background="@drawable/round_b"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_remove_black_24dp"
                            android:id="@+id/decrease"
                            android:layout_alignParentEnd="true"
                            />


                        <TextView
                            android:layout_width="@dimen/round_button"
                            android:layout_height="@dimen/round_button"
                            android:background="@drawable/round_border_b"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/q_text"
                            android:text="10"
                            android:textSize="21sp"
                            android:gravity="center"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_q"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/card_des"
                    android:layout_marginBottom="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:id="@+id/tab"
                        >

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:textColor="@color/orange"
                            android:textOn="@string/details"
                            android:textOff="@string/details"
                            android:textAllCaps="false"
                            android:id="@+id/details_toggle"
                            android:textSize="@dimen/product_details_dicount_text_size"
                            android:background="@drawable/product_details_toggle"
                            />

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textOn="@string/evaluation"
                            android:textOff="@string/evaluation"
                            android:id="@+id/evaluation_toggle"
                            android:textAllCaps="false"
                            android:textSize="@dimen/product_details_dicount_text_size"
                            android:background="@drawable/product_details_toggle"
                            />



                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/details_layout"
                        android:layout_below="@+id/tab"
android:visibility="gone"
                        >

                        <RadioGroup
                            android:checkedButton="@+id/english"
                            android:id="@+id/language"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/product_details_switch_height"

                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/orange_out_line"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginStart="1dp"
                                android:id="@+id/arabic"
                                android:background="@drawable/lang_toggele"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:button="@null"
                                android:gravity="center"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:text="@string/arabic"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:layout_marginEnd="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:id="@+id/english"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/lang_toggele"
                                android:button="@null"
                                android:gravity="center"
                                android:text="@string/english"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:textColor="@color/white" />
                        </RadioGroup>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/language"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/product_details_dicount_text_size"
                            android:text="* PANADOL Night is used to give temporary relief of pain when associated with sleeping difficulty.

*It is useful for headache, migraine headache, backache, arthritis, rheumatic and muscle pain, neuralgia, toothache or period pain.

*Paracetamol is an analgesic. It works to stop the pain messages from getting through to the brain. It also acts in the brain to reduce fever.

"
                            android:id="@+id/pro_dec"
                            />

                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/evaluation_layout"
                        android:layout_below="@+id/tab"
android:visibility="gone"
                        >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:id="@+id/text"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/overall_rating"
                                android:text="@string/overall_rating"
                                android:textStyle="bold"
                                android:textSize="@dimen/product_details_name_size"
                                android:textColor="@color/dark_blue"

                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate"
                                android:layout_below="@+id/overall_rating"
                                android:text="4.9/5"
                                android:textStyle="bold"
                                android:textSize="@dimen/product_details_name_size"
                                android:textColor="@color/orange"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                />


                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?attr/ratingBarStyleSmall"
                                android:id="@+id/rate_star"
                                android:layout_below="@+id/rate"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:rating="4.5"
                                android:progressTint="@color/orange"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/based_on"
                                android:text="@string/based_on"
                                android:layout_below="@+id/rate_star"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:textColor="@color/dark_blue"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/num_rate"
                                android:text="36"
                                android:layout_below="@+id/based_on"
                                android:textSize="@dimen/product_details_dicount_text_size"
                                android:textStyle="bold"
                                android:textColor="@color/dark_blue"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                />


                        </RelativeLayout>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/text"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="10dp"
                            android:id="@+id/progress"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate5"

                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rate5_text"
                                    android:text="5"
                                    android:textSize="@dimen/product_details_dicount_text_size"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    />


                               <SeekBar
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_toEndOf="@+id/rate5_text"
                                   android:layout_centerVertical="true"
                                   android:id="@+id/rate5_bar"
                                   android:progressTint="@color/orange"
                                   android:thumbTint="@color/white"
                                   android:enabled="false"

                                   android:progress="50"
                                   />

                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate4"
                                android:layout_below="@+id/rate5"
                                android:layout_marginTop="2dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rate4_text"
                                    android:text="4"
                                    android:textSize="@dimen/product_details_dicount_text_size"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    />


                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rate4_text"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/rate4_bar"
                                    android:progressTint="@color/orange"
                                    android:thumbTint="@color/white"
                                    android:enabled="false"
                                    android:progress="50"
                                    />

                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate3"
                                android:layout_below="@+id/rate4"
                                android:layout_marginTop="2dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rate3_text"
                                    android:text="3"
                                    android:textSize="@dimen/product_details_dicount_text_size"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    />


                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rate3_text"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/rate3_bar"
                                    android:progressTint="@color/orange"
                                    android:thumbTint="@color/white"
                                    android:enabled="false"
                                    android:progress="50"
                                    />

                            </RelativeLayout>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate2"
                                android:layout_below="@+id/rate3"
                                android:layout_marginTop="2dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rate2_text"
                                    android:text="2"
                                    android:textSize="@dimen/product_details_dicount_text_size"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    />


                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rate2_text"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/rate2_bar"
                                    android:progressTint="@color/orange"
                                    android:thumbTint="@color/white"
                                    android:enabled="false"
                                    android:progress="50"
                                    />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/rate1"
                                android:layout_below="@+id/rate2"
                                android:layout_marginTop="2dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rate1_text"
                                    android:text="1"
                                    android:textSize="@dimen/product_details_dicount_text_size"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_blue"
                                    />


                                <SeekBar
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/rate1_text"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/rate1_bar"
                                    android:progressTint="@color/orange"
                                    android:thumbTint="@color/white"
                                    android:enabled="false"
                                    android:progress="50"
                                    />

                            </RelativeLayout>

                        </RelativeLayout>



                    </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>



        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_details_add_to_cart_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background"
            android:text="@string/add_to_cart"
            android:textColor="@android:color/white"
            android:textSize="@dimen/product_details_add_to_cart_size"
            android:layout_marginEnd="@dimen/product_details_add_to_cart_width"
            android:id="@+id/desc_add_tocart"

            />

        <RelativeLayout
            android:layout_width="@dimen/product_details_add_to_cart_width"
            android:layout_height="@dimen/product_details_add_to_cart_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/quantity"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="@dimen/product_details_quantity_margin_top"
                android:id="@+id/user_q_text"
                android:textSize="@dimen/product_details_quantity_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_q_text"
                android:layout_centerHorizontal="true"
