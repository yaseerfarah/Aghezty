<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recycler_title"
        >

        <ImageButton
            android:id="@+id/logo"
            android:layout_width="@dimen/horizontal_recycler_card"
            android:layout_height="@dimen/horizontal_recycler_card"
            android:maxHeight="@dimen/horizontal_recycler_card"
            android:maxWidth="@dimen/horizontal_recycler_card"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/orange"
            android:background="@drawable/ic_prize"

            />

        <TextView
            android:id="@+id/title"
            android:layout_toEndOf="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Best Categories"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/horizontal_recycler_title_size"
            android:textStyle="bold"

            />




    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler"
        android:layout_below="@+id/recycler_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />






</RelativeLayout>