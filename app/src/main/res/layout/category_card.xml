<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/category_card_width"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/cat_card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_card_image_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/category_card_image_margin"
            android:layout_marginRight="@dimen/category_card_image_margin"
            android:id="@+id/img_cont"
            >
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/CustomInverseProgress"
                android:id="@+id/progress"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/category_image"
                android:scaleType="fitCenter"
                />


        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_name"
            android:text="Oven"
            android:textSize="@dimen/category_card_text_size"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_cont"
            android:textColor="@color/dark_blue"
            android:layout_marginBottom="5dp"/>





    </RelativeLayout>


</androidx.cardview.widget.CardView>