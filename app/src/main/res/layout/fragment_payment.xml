<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Payment">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/payment_method"
            android:layout_marginTop="15dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/credit_card"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_credit_card"
                        android:backgroundTint="@color/black"
                        android:layout_marginTop="20dp"
                        android:id="@+id/credit_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/credit_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Credit Card"
                        android:textColor="@color/black"
                        android:id="@+id/credit_text"
                        android:layout_marginBottom="10dp"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/cash"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/credit_card"
                android:layout_margin="20dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_money"
                        android:backgroundTint="@color/black"
                        android:layout_marginTop="12dp"
                        android:id="@+id/cash_icon"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cash_icon"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Cash on Delivery"
                        android:textColor="@color/black"
                        android:id="@+id/cash_text"
                        android:layout_marginBottom="10dp"

                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/payment_method"
            android:layout_margin="10dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/card_name_info"
                android:id="@+id/card_number_info"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/dark_blue"
                    android:text="Card Number"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Card Number"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="16"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_e"
                    android:id="@+id/card_number_edit"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:id="@+id/card_name_info"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/dark_blue"
                    android:text="Name ON Card"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Name On Card"

                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_e"
                    android:id="@+id/card_name_edit"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_number_info"
                android:layout_marginTop="20dp"
                android:id="@+id/card_cvv_info"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CVV Code"
                    android:gravity="center"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="***"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:imeOptions="actionGo"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_e"
                    android:id="@+id/card_cvv_edit"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/card_number_info"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:id="@+id/card_expiration_info"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Expiration Date"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    >

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:hint="MM"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_e"
                        android:id="@+id/card_expirationmm_edit"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="29sp"
                        android:paddingTop="2dp"
                        android:layout_toRightOf="@+id/card_expirationmm_edit"
                        android:layout_marginLeft="4dp"
                        />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:hint="YY"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLength="2"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_e"
                        android:layout_toRightOf="@+id/card_expirationmm_edit"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/card_expirationyy_edit"
                        />

                </RelativeLayout>


            </LinearLayout>



        </RelativeLayout>





    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

</FrameLayout>