<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Shipping">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="CUSTOMER INFORMATION"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/customer_info"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/name_info"
            android:layout_below="@+id/customer_info"

            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Name"
                android:textColor="@color/dark_blue"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Name"

                android:gravity="center"
                android:imeOptions="actionNext"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/name_edit"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/name_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:id="@+id/email_info"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="E-mail"
                android:textColor="@color/dark_blue"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="E-mail"
                android:imeOptions="actionNext"

                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/email_edit"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/email_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:id="@+id/Phone_info"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/dark_blue"
                android:text="Phone"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Pnone"

                android:gravity="center"
                android:imeOptions="actionNext"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/phone_edit"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="SHIPPING ADDRESS"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/shipping_info"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/Phone_info"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/shipping_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:id="@+id/city_info"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/dark_blue"
                android:text="City"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="City"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/city_edit"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/city_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:id="@+id/governorate_info"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/dark_blue"
                android:text="Governorate"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Governorate"
                android:imeOptions="actionNext"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/governorate_edit"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/governorate_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:id="@+id/address_info"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Address"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Address"
                android:imeOptions="actionGo"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_e"
                android:id="@+id/address_edit"
                />
        </LinearLayout>


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>