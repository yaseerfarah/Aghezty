<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CustomerInformation">

    <com.gturedi.views.StatefulLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/stateful"
        >





   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="15dp"
       >


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:text="CUSTOMER INFORMATION"
           android:textColor="@color/dark_blue"
           android:textStyle="bold"
           android:textSize="18sp"
           android:id="@+id/customer_info"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/name_info"
           android:layout_below="@+id/customer_info"

           android:layout_marginTop="20dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:text="Name"
               android:textColor="@color/dark_blue"
               android:textSize="15sp" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:hint="Name"
               android:inputType="textPersonName"
               android:gravity="center"
               android:imeOptions="actionNext"
               android:layout_marginTop="10dp"
               android:background="@drawable/border_e"
               android:id="@+id/name_edit"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@+id/name_info"
           android:layout_alignParentRight="true"
           android:layout_marginTop="20dp"
           android:id="@+id/email_info"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:text="E-mail"
               android:textColor="@color/dark_blue"
               android:textSize="15sp" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:hint="E-mail"
               android:imeOptions="actionNext"
               android:inputType="textEmailAddress"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:background="@drawable/border_e"
               android:id="@+id/email_edit"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@+id/email_info"
           android:layout_alignParentRight="true"
           android:layout_marginTop="20dp"
           android:id="@+id/Phone_info"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="left"
               android:textColor="@color/dark_blue"
               android:text="Phone"
               android:textSize="15sp" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:hint="Pnone"
               android:inputType="phone"
               android:gravity="center"
               android:imeOptions="actionDone"
               android:layout_marginTop="10dp"
               android:background="@drawable/border_e"
               android:id="@+id/phone_edit"
               />
       </LinearLayout>



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal"
           android:weightSum="2"
           android:id="@+id/buttons"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           >


           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="2"
               android:background="@drawable/button_background"
               android:text="NEXT"
               android:textColor="@android:color/white"
               android:textSize="15sp"
               android:layout_marginRight="5dp"
               android:id="@+id/next"
               android:layout_marginBottom="5dp"
               />




       </LinearLayout>



   </RelativeLayout>



    </com.gturedi.views.StatefulLayout>

</FrameLayout>